
<div class="container">
  <div class="container-game">
    <div class="game-image">
      <img src="<%= @game.image %>" >
    </div>
    <div class="game-info">
      <div class="game-title">
        <h2><%= @game.title %></h2>
      </div>
      <div class="game-description">
        <p><%= @game.description %></p>
        <% if @game.min_players == @game.max_players %>
            <p>Players: <%=@game.min_players%></p>
          <% else %>
          <p>Players: <%= @game.min_players %>-<%= @game.max_players %> </p>
          <% end %>
      </div>

      <div class="make_booking_card">
      <h4>Want to borrow this game?</h4>
      <p>Choose your dates and we'll do the rest!</p>
      <%= simple_form_for [@game, Booking.new] do |b| %>
        <%= b.input :start_date, collection: @today, html5: true %>
        <%= b.input :end_date, as: :date, html5: true  %>
        <br>
        <%= b.submit "Book this game", data: {game_id: @game.id,} %>


      <% end %>
      </div>



      <br>
<%= link_to "Back to games", games_path %>
    </div>
  </div>
</div>
